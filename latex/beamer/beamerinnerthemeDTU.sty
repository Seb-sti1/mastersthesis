\RequirePackage{color}
\RequirePackage{beamerbasetemplates}\mode<presentation>
\setbeamertemplate{title page}{
        {
        \usebeamerfont{title}
        \usebeamercolor[fg]{title}

        % title
        \begin{tikzpicture}[remember picture,overlay]
            \node[anchor=south west,
                text width = \paperwidth,
                xshift=0mm,
                yshift=10mm]
            at (current page.south west)
                {{\usebeamerfont{subtitle}%
            \usebeamercolor[fg]{subtitle}%
            \insertsubtitle} \\
            {\textbf{\color{white}\inserttitle}}};
        \end{tikzpicture}
    }

% logo
    \begin{tikzpicture}[remember picture,overlay]
        \node[anchor=north west,
            xshift=1mm,
            yshift=-2mm]
        at (current page.north west)
            {\includegraphics[width=7.5mm,keepaspectratio]{logo/dtu/white_cmyk}};
    \end{tikzpicture}
}

\setbeamertemplate{frametitle}{}

\BeforeBeginEnvironment{frame}{%
    \setbeamertemplate{headline}[dtudefault]%
}
\makeatletter
\define@key{beamerframe}{tocremainder}[true]{%
    \setbeamertemplate{headline}[simplified]%
}
\makeatother

\mode
<all>